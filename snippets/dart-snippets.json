{
  "Wrap with Consumer (Any Provider)": {
    "prefix": "wrapConsumer",
    "body": [
      "Consumer<${1:ProviderType}>(",
      "  builder: (context, ${2:provider}, _) {",
      "    return ${3:ChildWidget}();",
      "  },",
      ");"
    ],
    "description": "Wrap a widget with Consumer<T> where T is any provider"
  },

  "String Getter and Setter": {
    "prefix": "getsetString",
    "body": [
      "String? _${1:variable};",
      "",
      "String? get ${1:variable} => _${1:variable};",
      "set ${1:variable}(String? value) {",
      "    _${1:variable} = value;",
      "    notifyListeners();",
      "}",
      "$0"
    ],
    "description": "Creates a `String` getter and setter for a provider variable"
  },
